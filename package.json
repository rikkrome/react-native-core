{
  "version": "0.1.0",
  "description": "react native core",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "example"
    ]
  },
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit --composite false",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prerelease": "lerna run clean",
    "release": "lerna publish",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:romerorickyio/react-native-core.git"
  },
  "author": "ricky romero <contact@romeroricky.com> (https://github.com/romerorickyio)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/romerorickyio/react-native-core/issues"
  },
  "homepage": "https://github.com/romerorickyio/react-native-core#readme",
  "dependencies": {
    "react": "16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@types/jest": "^26.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "lerna": "^4.0.0",
    "metro-react-native-babel-preset": "^0.70.0",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
